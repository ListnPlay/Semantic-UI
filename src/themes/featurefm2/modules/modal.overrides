/*******************************
         Theme Overrides
*******************************/

.ui.modal {
    .close.icon {
        top: 0.05em;
        right: 0.05em;
        float: right;
        cursor: hand;
        color: #CCD6D0;
        font-family: museo-sans, sans-serif;
        font-size: 32px;
        font-weight: 100;
    }

    i.icon.close:before {
        content: '\2715';
    }
}