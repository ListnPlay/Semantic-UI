/*******************************
         Theme Overrides
*******************************/

.field > input, .ui.input > input {
    background-color: transparent !important;
    position: relative;
}

.field > input:focus, .ui.input > input:focus {
    z-index: 1;
}

input {
  padding-left: 20px;
  padding-right: 20px;
  font-weight: @font-weight-light;
}